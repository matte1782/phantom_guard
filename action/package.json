{
  "name": "@phantom-guard/action",
  "version": "0.2.0",
  "description": "GitHub Action for Phantom Guard - Detect AI-hallucinated package attacks",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --minify --source-map",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "github-action",
    "security",
    "supply-chain",
    "phantom-guard",
    "slopsquatting"
  ],
  "author": "Phantom Guard Team",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@actions/glob": "^0.4.0",
    "@actions/exec": "^1.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
